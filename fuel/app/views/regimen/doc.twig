{# ベースとなるテンプレートを継承 #}
{% extends "base.twig" %}
{#
    【DOC療法】 
#}
{#療法名#}
{% block regimenName %}DOC療法{% endblock regimenName %}

{#使用薬剤・薬価表示#}
{% block regimenContent %}
    <div class="row">
        <div class="col-md-12">
            <table class="dosage">
                <tr>
                    <td class="col1">
                        <!-- レシピ別リンク：idは"lnk_recipe_xx"(xxはレシピID) -->
                        <a class="lnkBtn" id="lnk_Recipe_25" onclick="recipeEditModalShow(this);" href="JavaScript:void(0);">DOC(<span data-bind="text: docDosageLnk"></span>mg/㎡)</a> 
                    </td>
                    <td class="col2"  data-bind="text: docDosageLbl">                 
                    </td>
                    <td class="col3">
                        mg/body                   
                    </td>
                    <td class="col4">
                        <input type="text" class="form-control" size="8"  data-bind="value: docDosageTxt"/>    
                    </td>
                    <td class="col5">
                        mg/body                   
                    </td>
                </tr>
            </table>
        </div>    
    </div> 
    <div class="row">
        <div class="col-md-12">
            <table class="price">
                <tr>
                    <td class="col1">
                        DOC薬価：                    
                    </td>
                    <td class="col2" data-bind="text: docPrice">             
                    </td>
                    <td class="col3">
                        円                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        合計薬価：                    
                    </td>
                    <td class="col2" data-bind="text: docTotalPrice">               
                    </td>
                    <td class="col3">
                        円                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        3割負担：                    
                    </td>
                    <td class="col2" data-bind="text: docTotalPrice30per">                 
                    </td>
                    <td class="col3">
                        円                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        2割負担：                    
                    </td>
                    <td class="col2" data-bind="text: docTotalPrice20per">                 
                    </td>
                    <td class="col3">
                        円                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        1割負担：                    
                    </td>
                    <td class="col2" data-bind="text: docTotalPrice10per">                
                    </td>
                    <td class="col3">
                        円                   
                    </td>
                </tr>
            </table>
        </div> 
    </div>                       
{% endblock regimenContent %}

