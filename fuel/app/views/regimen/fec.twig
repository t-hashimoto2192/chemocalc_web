                    <td class="col2">
                        <span>0</span>                    
                    </td>
                    <td class="col3">
                        mg/body                   
                    </td>
                    <td class="col4">
                        <input type="text" class="form-control" size="8"  data-bind="value: fec_fu_val"/>    
                    </td>
                    <td class="col5">
                        mg/body                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        {{html_anchor("JavaScript:void(0);", "EPI(100mg/㎡)：", {'class' : 'lnkBtn'}) }}                    
                    </td>
                    <td class="col2">
                        <span>0</span>                    
                    </td>
                    <td class="col3">
                        mg/body                   
                    </td>
                    <td class="col4">
                        <input type="text" class="form-control" size="8"  data-bind="value: fec_fu_val"/>    
                    </td>
                    <td class="col5">
                        mg/body                   
                    </td>
                </tr>
            </table>
        </div>    
    </div> 
    <div class="row">
        <span style="font-weight: bold;font-size: large;">制吐剤</span> 
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="fiveht3">
