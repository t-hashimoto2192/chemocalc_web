{# ベースとなるテンプレートを継承 #}
{% extends "base.twig" %}
{#
    【FEC療法】 
#}
{#療法名#}
{% block regimenName %}FEC療法{% endblock regimenName %}

{#使用薬剤・薬価表示#}
{% block regimenContent %}
    <div class="row">
        <div class="col-md-12">
            <table class="dosage">
                <tr>
                    <td class="col1">
                        {{html_anchor("JavaScript:void(0);", "5-FU(" ~ recipe_5fu.dosage_str ~ "mg/㎡)：", {'class' : 'lnkBtn', 'id' : 'lnk_Fec5fu', 'data-bind' : 'click: clickRecipeDosageLink'}) }}                    
                    </td>
                    <td class="col2">
                        <span data-bind="text: fec_fu_ref"></span>                   
                    </td>
                    <td class="col3">
                        mg/body                   
                    </td>
                    <td class="col4">
                        <input type="text" class="form-control" size="8"  data-bind="value: fec_fu_val"/>    
                    </td>
                    <td class="col5">
                        mg/body                   
                    </td>
                </tr>
                <tr>
                    <td class="col1">
                        {{html_anchor("JavaScript:void(0);", "CPA(" ~ recipe_cpa.dosage_str ~ "mg/㎡)：", {'class' : 'lnkBtn', 'id' : 'lnk_FecCpa', 'data-bind' : 'click: clickRecipeDosageLink'}) }}                    
